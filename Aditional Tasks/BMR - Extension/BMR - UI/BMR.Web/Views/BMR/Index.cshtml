@{
    ViewData["Title"] = "Home Page";
}
@model BMR.Models.Service.Models.Request.BMR.CalculateBMRRequestModel

@if (User.Identity.IsAuthenticated)
{
    <div class="calculator">

        <div class="card signup_v4 mb-30">

            <div class="card-body">

                <div class="tab-content" id="myTabContent">

                    <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab" asp-method="Post" asp-action="Calculate">

                        <h4 class="text-center mt-4 mb-4" style="text-transform: uppercase;">Calculator</h4>

                        <form asp-action="Calculate">

                            <label asp-for="Gender" class="gender-select">Gender</label>
                            <select asp-for="Gender" class="gender-select" asp-items="Html.GetEnumSelectList<BMR.Models.Enums.Gender>()"> </select>
                            <span asp-validation-for="Gender" class="form-error-color"></span>

                            <label asp-for="Activity" class="activity-select">Activity</label>
                            <select asp-for="Activity" class="activity-select" asp-items="@ViewBag.Activities"></select>
                            <span asp-validation-for="Activity" class="form-error-color"></span>

                            <label asp-for="Age" class="form-label mt-4"> </label>
                            <span asp-validation-for="Age" class="form-error-color"></span>
                            <input asp-for="Age" class="form-control" placeholder="18" required>

                            <label asp-for="Height" class="form-label mt-4"> </label>
                            <span asp-validation-for="Height" class="form-error-color"></span>
                            <input asp-for="Height" class="form-control" placeholder="180" required>

                            <label asp-for="Weight" class="form-label mt-4"> </label>
                            <span asp-validation-for="Weight" class="form-error-color"></span>
                            <input asp-for="Weight" class="form-control" placeholder="60" required>

                            <div class="mt-2 mb-3"> <button class="btn btn-primary full-width" type="submit">Calculate</button> </div>

                        </form>

                    </div>

                </div>

            </div>

        </div>

    </div>
}