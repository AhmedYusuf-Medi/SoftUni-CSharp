@{
    ViewData["Title"] = "Home Page";
}
@model BMR.Models.Service.Models.Request.UserRequestModel

@if (!User.Identity.IsAuthenticated)
{
    <div class="login">

        <div class="card signup_v4 mb-30">

            <div class="card-body">

                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation"> <a class="nav-link active" id="login-tab" data-toggle="tab" href="#login" role="tab" aria-controls="login" aria-selected="true">Login</a> </li>
                    <li class="nav-item" role="presentation"> <a class="nav-link" id="register-tab" data-toggle="tab" href="#register" role="tab" aria-controls="register" aria-selected="false">Register</a> </li>
                </ul>

                <div class="tab-content" id="myTabContent">

                    <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab" asp-method="Post" asp-action="Login">

                        <h4 class="text-center mt-4 mb-4" style="text-transform: uppercase;">Login</h4>

                        <form asp-action="Login">

                            <div class="form-row">

                                <label asp-for="Email" class="form-label mt-4"> </label>
                                <span asp-validation-for="Email" class="form-error-color"></span>
                                <input asp-for="Email" class="form-control" aria-describedby="emailHelp" placeholder="email@example.com" required>

                                <label asp-for="Password" class="form-label mt-4"> </label>
                                <span asp-validation-for="Password" class="form-error-color"></span>
                                <input asp-for="Password" class="form-control" aria-describedby="emailHelp" placeholder="password" required>

                            </div>

                            <div class="mt-2 mb-3"> <button class="btn btn-primary full-width" type="submit">Login</button> </div>

                        </form>

                    </div>

                    <div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="register-tab" asp-method="Post" asp-action="Register">

                        <h4 class="text-center mt-4 mb-4" style="text-transform: uppercase;">Sign-in</h4>

                        <form asp-action="Register">

                            <div class="form-row">

                                <label asp-for="Email" class="form-label mt-4">Email </label>
                                <span asp-validation-for="Email" class="form-error-color"> </span>
                                <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="email@example.com" required>

                                <label asp-for="Password" class="form-label mt-4">Password</label>
                                <span asp-validation-for="Password" class="form-error-color"></span>
                                <input asp-for="Password" class="form-control" aria-describedby="emailHelp" placeholder="*******" required>

                                <hr class="mt-3 mb-4">

                                <div class="col-12">

                                    <div class="mt-2 mb-3"> <button class="btn btn-primary full-width" type="submit">Register</button> </div>

                                </div>

                            </div>

                        </form>

                    </div>

                </div>

            </div>

        </div>

    </div>
}